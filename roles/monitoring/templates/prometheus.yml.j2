# Promtheus configuration - managed by ansible.

global:
  scrape_interval:     5s
  evaluation_interval: 5s

  external_labels:
      monitor: external

alerting:
  alertmanagers:
  - static_configs:
    - targets:
      - localhost:9093

rule_files:
  {% if configuration.prometheus.alerts %} - /etc/prometheus/alerts.yml{% endif %}
  # - "first_rules.yml"
  # - "second_rules.yml"

scrape_configs:
  - job_name: prometheus
    static_configs:
      - targets:
        - localhost:9090

  - job_name: alertmanager
    static_configs:
      - targets:
        - localhost:9093

  - job_name: grafana
    static_configs:
      - targets:
        - localhost:3000

  - job_name: node
    static_configs:
      - targets:
      {% for host in groups['all'] %}
        - {{ host }}:9100
      {% endfor %}

  - job_name: geth
    metrics_path: /debug/metrics/prometheus
    static_configs:
      - targets:
      {% for host in groups['eth1'] %}
        - {{ host }}:6060
      {% endfor %}

  - job_name: beacon
    static_configs:
      - targets:
      {% for host in groups['lighthouse'] %}
        - {{ host }}:5054
      {% endfor %}

  - job_name: validator
    static_configs:
      - targets:
      {% for host in groups['lighthouse'] %}
        - {{ host }}:5064
      {% endfor %}
